<div class="container">
    <h1 class="h1 display-6 text-left mt-4 text-light bg-dark p-1">Add Profile Form</h1>
    <form action="/profile/addprofile" method="POST" enctype="multipart/form-data" class="mt-4">
        <div class="row">
            <div class="col-4 mt-2">
                <input type="file" class="form-control" name="photo" placeholder="upload a photo">
            </div>
            <div class="col-4 mt-2">
                <input type="text" class="form-control" name="name" placeholder="enter aname">
            </div>
            <div class="col-4 mt-2">
                <input type="text" class="form-control" name="phonenumber" placeholder="phone number">
            </div>
            <div class="col-4 mt-2">
                <input type="text" class="form-control" name="company" placeholder="Enter company">
            </div>
            <div class="col-4 mt-2">
                <input type="text" class="form-control" name="location" placeholder="enter location">
            </div>
            <div class="col-4 mt-2">
                <input type="text" class="form-control" name="education" placeholder="education">
            </div>
            <div class="col-12 mt-4">
                <button type="submit" class="btn btn-dark float-right mt-4">Submit</button>
            </div>
        </div>
    </form>

</div>